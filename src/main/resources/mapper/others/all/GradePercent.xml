<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.spc.dao.GradePercentDao">

    <update id="updateGradePercent">
        update course.gradePercent
        set course.gradePercent.xbsjGradePercent=#{xbsj},course.gradePercent.knskGradePercent=#{knsk},course.gradePercent.wlzzGradePercent=#{wlzz},course.gradePercent.dektGradePercent=#{dekt},course.gradePercent.nlcsGradePercent=#{nlcs},course.gradePercent.operator=#{userId},course.gradePercent.operateTime=#{date}
        where course.gradePercent.typeId=#{typeId};
    </update>

    <update id="updateFlagZero">
       update course.gradePercent set flag=0
    </update>

    <select id="getGradePercent" resultType="map" >
        SELECT typeId , xbsjGradePercent as XBSJ ,knskGradePercent as KNSK, nlcsGradePercent as QMNL ,wlzzGradePercent as ZZXX ,dektGradePercent as DEKT
        FROM course.gradePercent
    </select>
</mapper>
