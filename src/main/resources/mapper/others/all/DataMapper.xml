<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.spc.dao.DataDao">
    <!--<cache></cache>-->

    <sql id="BASE_COLUMN_DEPART">
    departId,departName
    </sql>

    <select id="getDepart" resultType="map">
        select
        departName,departId
        from
        Department
    </select>

    <select id="selectXuanKeStu" resultType="int" useCache="false">
        select count(*)
        from
        XuanKeStu
        where stuId=#{stuId}
    </select>
    
    <select id="allXuanKeStu" resultType="map">
        select *
        from
        XuanKeStu
    </select>
    <select id="findDepartId" resultType="int">
        select departId
        from course.Department
        where 1=1
        <if test="#{departCode!=null}">
        and departCode=#{departCode}
        </if>

    </select>

</mapper>
