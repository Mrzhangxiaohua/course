<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.spc.dao.UserDao" >

  <resultMap id="userMap" type="com.spc.model.UserDomain">
    <id property="userId" column="userId"/>
    <result property="userName" column="userName"/>
    <result property="password" column="password"/>
    <association property="role"  column="userId" select="selectRole"/>
  </resultMap>

  <select id="selectRole" resultType="com.spc.model.RoleDomain">
  select r.roleName,r.roleId
  from
  (select  u.userId,ru.roleId
  from user u
  left join Role_user ru
  on u.userId = ru.userId
  ) a
  left join Role r
  on a.roleId = r.roleId
  where a.userId = #{id}
  </select>



  <sql id="BASE_TABLE">
    user
  </sql>

  <sql id="BASE_COLUMN">
    userId,userName,password
  </sql>

  <insert id="insert" parameterType="com.spc.model.UserDomain">
    INSERT INTO
      <include refid="BASE_TABLE"/>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      userName,password,
    </trim>
    <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
      #{userName, jdbcType=VARCHAR},#{password, jdbcType=VARCHAR},
    </trim>
  </insert>

  <select id="selectUsersById" resultMap="userMap">
      SELECT *
      FROM
        <include refid="BASE_TABLE"/>
      <where>
        userId = #{userId}
      </where>
  </select>


</mapper>